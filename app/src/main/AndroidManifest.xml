<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.education">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application

            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="Fun Education"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".SocialMedia">
        </activity>
        <activity android:name=".Quiz">
        </activity>
        <activity android:name=".Drawing">
        </activity>
        <activity android:name=".LiteracyTest">
        </activity>
        <activity android:name=".MathsTest">
        </activity>
        <activity android:name=".SpellList">
        </activity>
        <activity android:name=".SpellingActivity">
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="Fun Education"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>